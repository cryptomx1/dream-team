{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python",
      "config": {
        "runtime": "python3.11"
      }
    }
  ],
  "routes": [
    {
      "src": "/post_message",
      "dest": "/api/index.py"
    },
    {
      "src": "/get_messages",
      "dest": "/api/index.py"
    },
    {
      "src": "/clear_messages", 
      "dest": "/api/index.py"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/index.py"
    }
  ]
}